{
  "root": true,
  "env": {
    "es2021": true,
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime"
  ],
  "plugins": ["react"],
  "settings": {
    "react": {
      "version": "detect" // Automatically includes the React version
    }
  },
  "rules": {
    "react/prop-types": 1,
    "no-unused-vars": 1
  }
}
